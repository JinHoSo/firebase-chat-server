    "module": "commonjs",
    "noImplicitReturns": true,
    "removeComments": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2015",
    "lib": ["es2015", "dom"],
    "typeRoots": [
//      "node_modules/@types"
    ]
  },
  "compileOnSave": true,
  "include": [
    "src"
  ],
  "exclude": ["node_modules","**/*.spec.ts", "**/*.test.ts"]
}

