{
  "name": "functions",
  "scripts": {
    "build": "tsc",
    "serve": "npm run build && firebase serve --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy-functions": "firebase deploy --only functions",
    "deploy-firestore-rules": "firebase deploy --only firestore:rules",
    "deploy-firestore-indexes": "firebase deploy --only firestore:indexes",
    "logs": "firebase functions:log",
    "test": "mocha --timeout 10000 -r ts-node/register tests/**/*.test.ts",
    "test-user": "mocha --timeout 10000 -r ts-node/register tests/user.test.ts",
    "test-room": "mocha --timeout 10000 -r ts-node/register tests/room.test.ts",
    "test-message": "mocha --timeout 10000 -r ts-node/register tests/message.test.ts",
    "test-specific": "mocha --timeout 10000 -r ts-node/register tests/message.test.ts -g 'should get messages by updatedAt'"
  },
  "main": "lib/index.js",
  "dependencies": {
    "firebase-admin": "~7.0.0",
    "firebase-functions": "^2.2.0",
    "i18n": "^0.8.4",
    "short-uuid": "^3.1.1"
  },
  "devDependencies": {
    "@types/chai": "^4.2.5",
    "@types/i18n": "^0.8.6",
    "@types/jasmine": "^3.4.6",
    "@types/mocha": "^5.2.7",
    "chai": "^4.2.0",
    "firebase-functions-test": "^0.1.7",
    "jasmine": "^3.5.0",
    "mocha": "^6.2.2",
    "ts-node": "^8.5.0",
    "typescript": "^3.2.2"
  },
  "private": true
}
